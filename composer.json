{
  "name": "sbwerewolf/language-specific",
  "description": "Library for using PHP specific features",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolay Volkhin",
      "email": "ulfnew@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11",
    "buggregator/trap": "*",
    "phpstan/phpstan": "^2",
    "phpmd/phpmd": "^2",
    "squizlabs/php_codesniffer": "*",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-strict-rules": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "scripts": {
    "test": "php ./vendor/phpunit/phpunit/phpunit --configuration ./continuous-integration/phpunit/phpunit.xml --testdox  --colors=always  --coverage-html ./continuous-integration/autotests-coverage-report --coverage-filter ./src",
    "phpstan": "php ./vendor/bin/phpstan analyse -vvv",
    "phpmd": "php ./vendor/bin/phpmd src ansi continuous-integration/phpmd/ruleset.xml",
    "phpmd-ignore-violation": "php ./vendor/bin/phpmd src ansi continuous-integration/phpmd/ruleset.xml --generate-baseline",
    "psalm": "php ./psalm.phar --config=continuous-integration/psalm/psalm.xml"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
