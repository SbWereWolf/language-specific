{
  "name": "sbwerewolf/language-specific",
  "description": "Library for using PHP specific features",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolay Volkhin",
      "email": "ulfnew@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "11.*",
    "buggregator/trap": "^1.11",
    "phpstan/phpstan": "^2.0",
    "phpmd/phpmd": "^2.15",
    "vimeo/psalm": "^0.3.14",
    "squizlabs/php_codesniffer": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "scripts": {
    "test": "php ./vendor/phpunit/phpunit/phpunit --coverage-html ./build/coverage-report --coverage-filter ./src"
  }
}
